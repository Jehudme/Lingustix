# ===============================
# LINGUSTIX ENVIRONMENT CONFIGURATION
# ===============================
# Copy this file to .env and update the values for your environment.
# IMPORTANT: Never commit your .env file to version control!

# ===============================
# DOCKER COMPOSE CONFIGURATION
# ===============================
# Comma-separated list of profiles to enable.
# Options: app, postgres, languagetool, search
COMPOSE_PROFILES=app,postgres,languagetool,search

# Host port mappings for Docker services
# SERVER_PORT: Spring Boot API server port
# WEBSITE_PORT: Next.js frontend port
# POSTGRES_PORT: PostgreSQL database port
# LANGUAGETOOL_PORT: LanguageTool grammar checking service port
# ELASTICSEARCH_PORT: Elasticsearch search engine port
SERVER_PORT=3000
WEBSITE_PORT=8080
POSTGRES_PORT=5432
LANGUAGETOOL_PORT=8081
ELASTICSEARCH_PORT=9200

# ===============================
# DATABASE CONFIGURATION
# ===============================
# PostgreSQL connection settings
# SPRING_DATASOURCE_DB: Name of the PostgreSQL database
# SPRING_DATASOURCE_USERNAME: PostgreSQL username
# SPRING_DATASOURCE_PASSWORD: PostgreSQL password (CHANGE THIS IN PRODUCTION!)
SPRING_DATASOURCE_DB=lingustix_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_secure_password_here

# ===============================
# APP SECURITY & JWT
# ===============================
# JWT (JSON Web Token) configuration for authentication
# APP_JWT_SECRET: Base64-encoded secret key for signing tokens (min 32 characters, CHANGE THIS IN PRODUCTION!)
# APP_JWT_EXPIRATION: Token expiration time in milliseconds (86400000 = 24 hours)
APP_JWT_SECRET=Zm9yLW15LXByb2plY3QtbGluZ3VzdGl4LXNlY3JldC1rZXktMjAyNi12ZXJzaW9uLWJhc2U2NA==
APP_JWT_EXPIRATION=86400000

# ===============================
# DEBUG & LOGGING
# ===============================
# Debug and logging configuration
# APP_DEBUG_SHOW_MESSAGES: When true, detailed error messages are included in API responses (disable in production!)
# LOG_LEVEL_SQL: SQL query logging level (DEBUG, INFO, WARN, ERROR)
APP_DEBUG_SHOW_MESSAGES=true
LOG_LEVEL_SQL=DEBUG
# ===============================
# SERVER CONFIGURATION
# ===============================
SERVER_PORT=8080

# ===============================
# DATABASE (POSTGRESQL)
# ===============================
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/your_database_name
SPRING_DATASOURCE_USERNAME=your_username
SPRING_DATASOURCE_PASSWORD=your_password

# ===============================
# JPA / HIBERNATE
# ===============================
SPRING_JPA_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# ===============================
# HIBERNATE SEARCH (LUCENE)
# ===============================
# Path where the search indexes will be stored
SPRING_LUCENE_INDEX_PATH=./storage/lucene/indexes

# ===============================
# SECURITY & JWT
# ===============================
# Used by JwtComponent. Requires a Base64 encoded string of at least 256 bits
APP_JWT_SECRET=your_base64_encoded_secret_key_at_least_32_characters_long
# Token expiration time in milliseconds (e.g., 86400000 for 24 hours)
APP_JWT_EXPIRATION=86400000

# ===============================
# DEBUG & LOGGING
# ===============================
# Toggle detailed error messages in GlobalExceptionComponent
APP_DEBUG_SHOW_MESSAGES=false
LOG_LEVEL_SQL=INFO